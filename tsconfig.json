{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "ES2021",
    "lib": [
      "es2021",
      "dom"
    ],
    "moduleResolution": "node",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "importHelpers": true,
    "paths": {
      "resources": [
        ""
      ]
    },
    "allowJs": true
  },
  "include": [
    "src",
    "dev-app",
    "test"
  ],
  "exclude": [ 
    "aurelia-project"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
